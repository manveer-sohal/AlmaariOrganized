{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/libs/*": ["libs/*"],
      "@/models/*": ["models/*"],
      "@/components/*": ["app/components/*"],
      "@/clothes/*": ["app/clothes/*"],
      "@/profile/*": ["app/profile/*"],
      "@/settings/*": ["app/settings/*"],

      "@/app/*": ["app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../deleteModule/addClothes.tsx"
  ],
  "exclude": ["node_modules"]
}
